NODE_ENV=development
BACKEND_URL=http://localhost:4250
FRONTEND_URL=http://localhost:5173
PORT=4250

# PostgreSQL
DATABASE_URL=postgresql://postgres:sua_senha@localhost:5432/nome_do_banco?schema=public

# JWT (gere: openssl rand -base64 32)
JWT_SECRET=altere-com-chave-segura
JWT_REFRESH_SECRET=altere-com-outra-chave-segura

# Redis (sessões + BullMQ; use Redis 6.2+)
REDIS_URI=
# ou: IO_REDIS_SERVER, IO_REDIS_PORT, IO_REDIS_PASSWORD, IO_REDIS_DB_SESSION

# Log (opcional): WARN,SUCCESS,ERROR | ou INFO,WARN,ERROR,SUCCESS
# LOG_LEVEL=WARN,SUCCESS,ERROR

# WhatsApp (Baileys): concorrência de sync e init de sessões
SYNC_CONCURRENCY=1
INIT_CONCURRENCY=1

# Limites e segurança
USER_LIMIT=10000
CONNECTIONS_LIMIT=100000
RATE_LIMIT_GENERAL=100
RATE_LIMIT_AUTH=10
SECURITY_BLOCKLIST=false
BLOCKLIST_IPS=
