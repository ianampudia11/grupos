NODE_ENV=development
BACKEND_URL=http://localhost:4250
FRONTEND_URL=http://localhost:5173
PORT=4250

# Banco de dados PostgreSQL
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=sua_senha
DB_NAME=nome_do_banco
DATABASE_URL=postgresql://postgres:sua_senha@localhost:5432/nome_do_banco?schema=public

# JWT (gere com: openssl rand -base64 32)
JWT_SECRET=altere-com-chave-segura
JWT_REFRESH_SECRET=altere-com-outra-chave-segura

# Redis: use REDIS_URI ou variáveis IO_REDIS_* (padrão Whaticket). BullMQ recomenda Redis 6.2+
# Senha: se IO_REDIS_PASSWORD estiver vazio, usa DB_PASS (mesma senha do banco).
REDIS_URI=
IO_REDIS_SERVER=127.0.0.1
IO_REDIS_PORT=6379
IO_REDIS_PASSWORD=
IO_REDIS_DB_SESSION=2

# Chrome/Puppeteer (WhatsApp). protocolTimeout evita "Runtime.callFunctionOn timed out" no sync de grupos
CHROME_BIN=
CHROME_WS=
CHROME_ARGS=--no-sandbox --disable-setuid-sandbox
CHROME_PROTOCOL_TIMEOUT=180000

USER_LIMIT=10000
CONNECTIONS_LIMIT=100000
CLOSED_SEND_BY_ME=true

# Segurança (rate limits, blocklist)
RATE_LIMIT_GENERAL=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_REGISTER=5
RATE_LIMIT_SENSITIVE=30
SECURITY_BLOCKLIST=false
BLOCKLIST_IPS=
